{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "vcpkg-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "dev",
      "displayName": "Development",
      "description": "Development build with debug symbols",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PYFLARE_BUILD_TESTS": "ON",
        "PYFLARE_BUILD_BENCHMARKS": "OFF"
      }
    },
    {
      "name": "dev-vcpkg",
      "displayName": "Development with vcpkg",
      "description": "Development build using vcpkg for dependencies",
      "inherits": ["vcpkg-base", "dev"]
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Optimized release build",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PYFLARE_BUILD_TESTS": "OFF",
        "PYFLARE_BUILD_BENCHMARKS": "OFF"
      }
    },
    {
      "name": "release-vcpkg",
      "displayName": "Release with vcpkg",
      "description": "Optimized release build using vcpkg",
      "inherits": ["vcpkg-base", "release"]
    },
    {
      "name": "ci",
      "displayName": "CI Build",
      "description": "Continuous integration build with all checks",
      "inherits": "vcpkg-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "PYFLARE_BUILD_TESTS": "ON",
        "PYFLARE_BUILD_BENCHMARKS": "ON",
        "PYFLARE_ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "windows-msvc",
      "displayName": "Windows MSVC",
      "description": "Windows build with MSVC",
      "inherits": "vcpkg-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "dev-vcpkg",
      "configurePreset": "dev-vcpkg"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "release-vcpkg",
      "configurePreset": "release-vcpkg"
    },
    {
      "name": "ci",
      "configurePreset": "ci"
    },
    {
      "name": "windows-msvc",
      "configurePreset": "windows-msvc"
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "ci",
      "configurePreset": "ci",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      }
    }
  ]
}
